@using HaarlemFilmFestival.ViewModels;
@using HaarlemFilmFestival.Models;
@model DanceViewModel

<script src="@Url.Content("~/Scripts/jquery.min.js")"></script>

@{
    ViewBag.Title = "Dance";
    IEnumerable<Dance> Events = Model.DanceLeft;
    IEnumerable<Artist> dances = Model.Artists;
}
    <div class="jumbotron">
        <h1>Visit Haarlem Dance</h1>
        <p>
            The Netherlands is the precursor of the Dance music. The Netherlands has many popular DJ’s like Martin Garrix, Tiësto and Hardwell. These popular Dj’s all play at the Haarlem Dance festival. There are three different days all with their own dance set. Every hour is unique, every day is unique, every second is unique. So check out our information page and see if your favorite Dj will be playing.
        </p>
    </div>


<h1>Tickets</h1>

<table class="table">

    <tr>
        <th>
            Time
        </th>
        <th>
            Location
        </th>
        <th>
            Hall
        </th>

        <th>
            Price
        </th>
        <th>
            Add to cart
        </th>
    </tr>
    @foreach (Dance d in Events)
    {
        <tr>
            <td>
                @d.StartTime.ToString() - @d.EndTime.ToString()
            </td>
            <td>
                @d.Location.Name
            </td>
            <td>
                @d.Location.LocationDescription
            </td>
            <td>
                @d.Price
            </td>
            <td>
                @Html.ActionLink("Add to cart", "Index", "Order")
            </td>
        </tr>
    }

</table>



   

<h1>Line-up</h1>


