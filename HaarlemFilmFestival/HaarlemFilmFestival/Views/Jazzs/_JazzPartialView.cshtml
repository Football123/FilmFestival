@using HaarlemFilmFestival.ViewModels;
@using HaarlemFilmFestival.Models;
@model  IEnumerable<Jazz> 

@{
    ViewBag.Title = "Jazz";
    IEnumerable<Jazz> Events = Model;
}
<table class="table">
  
    <tr>
        <th>
            Time
        </th>
        <th>
            Location
        </th>
        <th>
            Hall
        </th>
        <th>
            Band
        </th>
        <th>
            Price
        </th>
        <th>
            Add to cart
        </th>
    </tr>
    @foreach (Jazz j in Events)
    {
        <tr>
            <td>
                @j.StartTime.ToString() - @j.EndTime.ToString()
            </td>
            <td>
                @j.Location.Name
            </td>
            <td>
                @j.Location.LocationDescription
            </td>
            <td>
                @j.Band.Name
            </td>
            <td>
                @j.Price
            </td>
            <td>
               @Html.ActionLink("Add to cart", "Index", "Order", new { id = j.Id }, null)
            </td>
        </tr>
    }

</table>

